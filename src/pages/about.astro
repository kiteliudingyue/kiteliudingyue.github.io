---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactForm from '../components/ContactForm';

const skills = {
  'Data Analysis & Visualization': [
    'Python (pandas, NumPy, matplotlib, seaborn)',
    'R (ggplot2, dplyr, tidyr)',
    'SQL (PostgreSQL, MySQL)',
    'Tableau & Power BI',
    'D3.js & Observable',
    'Excel (Power Query, Pivot Tables)',
  ],
  'Machine Learning & Statistics': [
    'scikit-learn & TensorFlow',
    'Predictive modeling',
    'Clustering & classification',
    'Time series analysis',
    'A/B testing & experimentation',
    'Statistical inference',
  ],
  'Software Development': [
    'JavaScript/TypeScript',
    'React & Next.js',
    'Astro & Tailwind CSS',
    'Node.js & Express',
    'Git & GitHub',
    'RESTful APIs',
  ],
  'Tools & Technologies': [
    'Jupyter Notebooks',
    'Docker & CI/CD',
    'AWS & Vercel',
    'Figma & Design',
    'Agile methodologies',
  ],
};

const experience = [
  {
    year: '2024-Present',
    title: 'Data Analyst',
    company: 'Tech Company',
    description: 'Building data pipelines and dashboards to drive business decisions. Increased marketing ROI by 3.2x through customer segmentation.',
  },
  {
    year: '2023-2024',
    title: 'Junior Data Analyst',
    company: 'Startup Inc.',
    description: 'Analyzed user behavior data to optimize product features. Created automated reporting system saving 15 hours/week.',
  },
  {
    year: '2022-2023',
    title: 'Data Analytics Bootcamp',
    company: 'Self-Study',
    description: 'Completed intensive data science program covering Python, SQL, machine learning, and data visualization.',
  },
];
---

<BaseLayout
  title="About - Kite Liu"
  description="Learn more about Kite Liu - Data Analyst and Developer passionate about turning data into actionable insights."
>
  <div class="container mx-auto px-4 py-12 md:py-16">
    <!-- Hero Section -->
    <section class="max-w-4xl mx-auto mb-16">
      <div class="flex flex-col md:flex-row gap-8 items-center md:items-start">
        <div class="flex-shrink-0">
          <div class="w-32 h-32 md:w-40 md:h-40 rounded-full bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center">
            <span class="text-5xl md:text-6xl text-white font-bold">K</span>
          </div>
        </div>

        <div class="flex-1 text-center md:text-left">
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">
            Hi, I'm Kite Liu
          </h1>
          <p class="text-xl text-gray-600 dark:text-gray-400 mb-6">
            Data Analyst & Developer
          </p>
          <p class="text-lg text-gray-700 dark:text-gray-300 leading-relaxed">
            I turn data into stories and insights into action. With a background in analytics
            and software development, I love building tools that help people make better decisions.
          </p>
        </div>
      </div>
    </section>

    <!-- About Me Section -->
    <section class="max-w-4xl mx-auto mb-16">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">About Me</h2>
      <div class="prose prose-lg dark:prose-invert max-w-none">
        <p class="text-gray-700 dark:text-gray-300 leading-relaxed mb-4">
          I'm a data analyst who believes that the best insights come from combining
          technical skills with curiosity and empathy. Whether I'm wrangling messy datasets,
          building interactive dashboards, or developing machine learning models, I focus
          on creating value for users and stakeholders.
        </p>
        <p class="text-gray-700 dark:text-gray-300 leading-relaxed mb-4">
          My journey into data started when I realized that numbers tell incredible storiesâ€”if
          you know how to listen. I've since worked on projects ranging from customer segmentation
          to sales forecasting, always striving to make complex data accessible and actionable.
        </p>
        <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
          When I'm not analyzing data or writing code, you'll find me reading about behavioral
          economics, experimenting with new visualization techniques, or exploring the outdoors
          with my camera.
        </p>
      </div>
    </section>

    <!-- Skills Section -->
    <section class="max-w-4xl mx-auto mb-16">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">Skills & Technologies</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {Object.entries(skills).map(([category, items]) => (
          <div class="bg-white dark:bg-gray-800 rounded-lg p-6 border border-gray-200 dark:border-gray-700">
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">
              {category}
            </h3>
            <ul class="space-y-2">
              {items.map((skill) => (
                <li class="flex items-center gap-2 text-gray-700 dark:text-gray-300">
                  <svg class="w-5 h-5 text-blue-600 dark:text-blue-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  {skill}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </section>

    <!-- Experience Timeline -->
    <section class="max-w-4xl mx-auto mb-16">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">Experience</h2>
      <div class="space-y-8">
        {experience.map((item, index) => (
          <div class="relative pl-8 border-l-2 border-blue-600 dark:border-blue-400">
            <div class="absolute -left-2 top-0 w-4 h-4 rounded-full bg-blue-600 dark:bg-blue-400"></div>
            <div class="mb-1 text-sm font-medium text-blue-600 dark:text-blue-400">
              {item.year}
            </div>
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-1">
              {item.title}
            </h3>
            <div class="text-gray-600 dark:text-gray-400 mb-2">
              {item.company}
            </div>
            <p class="text-gray-700 dark:text-gray-300">
              {item.description}
            </p>
          </div>
        ))}
      </div>
    </section>

    <!-- Contact Section -->
    <section class="max-w-4xl mx-auto" id="contact">
      <div class="bg-gradient-to-br from-blue-50 to-purple-50 dark:from-gray-800 dark:to-gray-900 rounded-2xl p-8 md:p-12 border border-gray-200 dark:border-gray-700">
        <div class="text-center mb-10">
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
            Let's Connect
          </h2>
          <p class="text-lg text-gray-700 dark:text-gray-300">
            Have a question, project idea, or just want to chat about data?
            I'd love to hear from you.
          </p>
        </div>

        <!-- Social Links -->
        <div class="flex flex-wrap justify-center gap-4 mb-10">
          <a
            href="https://github.com/kiteliudingyue"
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-2 px-4 py-2 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-700 rounded-lg hover:border-blue-600 dark:hover:border-blue-400 transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            GitHub
          </a>
          <a
            href="https://linkedin.com/in/yourprofile"
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-2 px-4 py-2 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-700 rounded-lg hover:border-blue-600 dark:hover:border-blue-400 transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
            LinkedIn
          </a>
          <a
            href="https://twitter.com/yourhandle"
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-2 px-4 py-2 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-700 rounded-lg hover:border-blue-600 dark:hover:border-blue-400 transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"></path>
            </svg>
            Twitter
          </a>
        </div>

        <!-- Contact Form -->
        <ContactForm client:load />

        <div class="mt-8 text-center text-sm text-gray-600 dark:text-gray-400">
          Or email me directly at{' '}
          <a href="mailto:your.email@example.com" class="text-blue-600 dark:text-blue-400 hover:underline">
            your.email@example.com
          </a>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
